<resources>

    <!-- Base application theme. -->

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Base application theme. -->

    <!--Widget Styles-->

    <style name="AppTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AppTextViewStyle.Large">
        <item name="android:textSize">10pt</item>
    </style>

    <style name="AppTextViewStyle.Small">
        <item name="android:textSize">8pt</item>
    </style>

    <style name="AppImageView">
        <item name="android:contentDescription">@string/contentDescription</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="AppImageView.Large">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="AppImageView.Small">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">100dp</item>
    </style>

    <!--Widget Styles-->

</resources>
